            <i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i> <a href=""> and above</a>
        </section>

    </div>
</div>
<% vendors.forEach(vendor =>{ console.log(vendor)%> 
    <% var star, sum  = 0 %>
    <% vendor.ratings.forEach(x =>{ %>
        <%sum += x.star%> 
    <% }) %>
    <% star = sum / vendor.ratings.length %>    
    <section id="gallery">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src = <%=vendor.img%>  alt="" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= vendor.name %> </h5>
                            <p class="card-text"><%= vendor.description.substring(0, 100) %> </p>
                            <a href="/show/<%=vendor._id %>" class="btn btn-outline-success btn-sm">View more</a>
                            <button class="btn btn-outline-warning btn-sm" disabled> <%= star %>  <i class="fa fa-star"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<% }) %> 




